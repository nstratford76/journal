<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <h1>Write About Your Day</h1>
        <form class="entry-form" action="/journal/add-entry" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="">
            </div>
            <div class="form-control">
                <label for="imageUrl">Date</label>
                <input type="text" name="date" id="date" value="">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"></textarea>
            </div>
        
            <button class="btn" type="submit">Finish Entry</button>
            
        </form>
    </main>
<%- include('../includes/end.ejs') %>